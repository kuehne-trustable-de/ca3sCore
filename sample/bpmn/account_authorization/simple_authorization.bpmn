    </bpmn:startEvent>
    <bpmn:sequenceFlow id="Flow_12ab1ol" sourceRef="StartEvent_1" targetRef="Activity_12ghldc" />
    <bpmn:scriptTask id="Activity_12ghldc" name="TestActivity" camunda:asyncBefore="true" scriptFormat="groovy">
      <bpmn:extensionElements>
        <camunda:inputOutput>
            <camunda:inputParameter name="accountRequest">${accountRequest}</camunda:inputParameter>
            <camunda:inputParameter name="jws">${jws}</camunda:inputParameter>
            <camunda:inputParameter name="eabPresent">${eabPresent}</camunda:inputParameter>
            <camunda:inputParameter name="eabJwsNeedsValidation">${eabJwsNeedsValidation}</camunda:inputParameter>
        </camunda:inputOutput>
        <camunda:failedJobRetryTimeCycle>R5/PT1M</camunda:failedJobRetryTimeCycle>
      </bpmn:extensionElements>
      <bpmn:incoming>Flow_12ab1ol</bpmn:incoming>
      <bpmn:outgoing>Flow_1ilpuz8</bpmn:outgoing>
      <bpmn:multiInstanceLoopCharacteristics>
        <bpmn:loopCardinality xsi:type="bpmn:tFormalExpression">1</bpmn:loopCardinality>
      </bpmn:multiInstanceLoopCharacteristics>
      <bpmn:script>
          import org.slf4j.*
          Logger logger = LoggerFactory.getLogger("SimpleAuthorizationLogger")
          logger.warn("++++++++  accountRequest " + accountRequest )

      if( eabPresent ){
        logger.warn( "++++++++  jws " + jws)
        if(eabJwsNeedsValidation){
          execution.setVariable("failureReason", "validation of JWS not implemented")
          execution.setVariable("status", "Failure")
          logger.warn( "++++++++  jws implementation missing")
          return
        }
      } else {

        logger.warn( "++++++++  no eab present, checking the given values")

        if(accountRequest.getContacts().isEmpty()){
          execution.setVariable("failureReason", "no contacts available")
          execution.setVariable("status", "Failure")
          logger.warn( "++++++++  contacts missing")
          return
        }

        logger.warn( "++++++++  iterating all contacts")
        for( String contact: accountRequest.getContacts()){
          logger.warn( "++++++++  contact: " + contact)
          if(!contact.contains("trustable")){
            execution.setVariable("failureReason", "unexpected contact '" + contact + "'")
            execution.setVariable("status", "Failure")
            logger.warn( "++++++++  unexpected contact: " + contact)
            return
          }
        }
      }

      execution.setVariable("failureReason", "");
      execution.setVariable("status", "Success");
      </bpmn:script>
    </bpmn:scriptTask>
    <bpmn:endEvent id="Event_0p0maiz">
      <bpmn:incoming>Flow_1ilpuz8</bpmn:incoming>
    </bpmn:endEvent>
